<div class="navbar d-flex navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "navbar-brand band-logo" do %>
      <%= image_tag "https://static.thenounproject.com/png/48990-200.png" %>
    <% end %>
    <%= link_to root_path do%>
    <h3 class="header-font white-font navbar-title">Bandable</h3>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <% if !current_user.bands.empty? %>
          <div class="band-dropdown-container">
            <div class="btn-band-dropdown">
              My Bands
              <i class="fa fa-caret-down ml-3"></i>
            </div>
            <div class="band-dropdown-list hidden">
              <% current_user.bands.each do |band| %>
                <% if band.band_members.where(user: current_user)[0].is_member %>
                  <%= link_to band_path(band), class: "card-links" do %>
                    <div class="band-item">
                      <%= image_tag "#{band.image_url}", class: "avatar band-avatar mx-3" %>

                      <div class="audition-details white-font">
                        <div class="mr-3"><%= band.name %></div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="audition-dropdown-container">
            <div class="btn-audition-dropdown">
              My auditions
              <i class="fa fa-caret-down ml-3"></i>
            </div>
            <div class="audition-dropdown-list hidden">
              <% current_user.bands.each do |band| %>
                <% if band.band_members.where(user: current_user)[0].is_audition %>
                  <%= link_to band_path(band), class: "card-links" do %>
                    <div class="band-item">
                      <%= image_tag "#{band.image_url}", class: "avatar band-avatar mx-3" %>
                      <div class="audition-details white-font">
                        <div class="mr-3"><%= band.name %></div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item nav-word dropdown">
            <%= image_tag "#{current_user.avatar_url}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
