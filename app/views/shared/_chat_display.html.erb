
<div class="chat-main-container">
  <div class="chat-container">
    <h1 class="d-flex justify-content-center white-font border-bottom">
      Chat
    </h1>

    <div class="container">

    <div class="messaging">
      <div class="mesgs">
        <div class="msg_history">
          <% if !@band.messages.empty? %>
            <% @band.messages.each do |message| %>
              <% if message.user != current_user %>
                <div class="incoming_msg">
                  <div class="incoming_msg_img">
                    <img class="avatar" src="<%=message.user.avatar_url%>" alt="">
                  </div>
                    <div class="received_msg">
                      <div class="received_withd_msg">
                        <span class="white-font"> <%= message.user.first_name %> </span>
                        <p> <%= message.content %> </p>
                        <span class="time_date"> <%= message.created_at.strftime("%a %b %e at %l:%M %p") %> |    June 9</span>
                      </div>
                    </div>
                </div>
              <% end %>
              <% if message.user == current_user %>
                <div class="outgoing_msg">
                  <div class="sent_msg">
                    <span class="white-font"> <%= message.user.first_name %> </span>
                    <p><%= message.content %></p>
                    <span class="time_date"> <%= message.created_at.strftime("%a %b %e at %l:%M %p") %>|    June 9</span>
                  </div>
                  <div class="outgoing_msg_img ">
                    <img class="avatar" src="<%= message.user.avatar_url %>" alt="">
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
            <%= simple_form_for ([@band, @message]), html: { class: 'msger-inputarea' }, remote: true do|f| %>
              <%= f.input_field :content, class: "msger-input", placeholder: 'Enter your message...',  label: false %>
              <%= f.submit "Send", class: "msger-send-btn", id: 'submit-chat-btn' %>
            <% end %>
          <%# <form class="msger-inputarea">
            <input type="text" class="msger-input" placeholder="Enter your message...">
            <button type="submit" class="msger-send-btn">Send</button>
          </form> %>

      </div>

    </div>



    </div>
  </div>
</div>
