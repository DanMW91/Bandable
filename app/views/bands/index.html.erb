<%# <div class="banner" style="background-image: url('https://dice-media.imgix.net/homepage/hero-video-desktop.mp4')"> %>
<div class="video-bg-div">
  <%= video_tag "homepage_vid.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "header-video" %>
</div>
  <div class="titles">
    <h1 class="main-title white-font">Connect - Compose - Perform</h1>
    <div class="sub-title white-font">Central creativity hub for musicians around the world</div>
    <%= form_tag bands_path, method: :get, class: 'form-inline mt-5' do %>
      <div class="form-group mr-2">
        <%= submit_tag "Search", class: "btn btn-danger" %>
      </div>
      <div class="form-group w-50">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control w-50",
        placeholder: "Find a band or musician"
        %>
      </div>
    <% end %>
  </div>
</div>

<div class="container landing-cards-container">
  <div class="cards">
    <div class="card">
      <%= image_tag "find.png" %>
      <h4>Find</h4>
      <p>Find bands you want to join. Search by name, genre or location.</p>
    </div>
    <div class="card">
      <%= image_tag "meet.png" %>
      <h4>Meet</h4>
      <p>Collaborate with your new team anywhere in the world.</p>
    </div>
    <div class="card">
      <%= image_tag "note.png" %>
      <h4>Play</h4>
      <p>Jam. Record. Rock on. Your next hit awaits.</p>
    </div>
  </div>
</div>



<div class="index-card-container white-font">
  <div class="card-container-header w-100">
    <h1>Recommended Bands:</h1>
  </div>
  <% if @bands.empty? %>
  <h2 class="py-5 my-5">No results found. Please search again!</h2>
  <% else %>
  <% @bands.each do |band| %>
    <figure class="image-block">
      <%= cl_image_tag band.photo.key %>

      <figcaption>
        <h3>
        <%= band.name.upcase %>
        </h3>
        <p> <%= band.bio[0..150].gsub(/\s\w+\s*$/, '...') %></p>
        <p><%= band.location %></p>
        <p><%= band.genre %></p>
        <% if band.looking_for_instrument.blank? %>
          <br><%=  %>
        <% else %>
          <p> Looking for: <%= band.looking_for_instrument %></p>
        <% end %>  
        <%= link_to band_path(band) do %>
          <button>
            More Info
          </button>
        <% end %>
      </figcaption>
    </figure>
  <% end %>
  <% end %>
</div>
