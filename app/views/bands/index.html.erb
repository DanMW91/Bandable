<h1>Bands#index</h1>

<div class="banner" style="background-image: url('<%= image_path "banner.jpeg"%>')">
    <div class="container">
      <h1>Bandable</h1>
      <h3>Central creativity hub for musicians around the world</p>
    </div>
  </div>

<div class="container">
    <div class="cards" style='text-align:center;'>
      <div class="card">
        <%= image_tag "find.png" %>
        <h4>Find</h4>
        <p>Find a band you want to join.</p>
      </div>
      <div class="card">
        <%= image_tag "meet.png" %>
        <h4>Meet</h4>
        <p>Meet band members around the world.</p>
      </div>
      <div class="card">
        <%= image_tag "note.png" %>
        <h4>Collaborate</h4>
        <p>Finally you will be able to bring your inspirations to life.</p>
      </div>
    </div>
  </div>

<div class="container">
  <div class="cards-container">
      <% @bands.each do |band| %>
            <div class="band-name">
                <h2><%= link_to band.name.capitalize, band_path(band)%></h2>
                  <p><%= band.bio[0..150].gsub(/\s\w+\s*$/, '...') %></p>
                    <% band.users.each do |user| %>
                      <p><i>Band member -<%= user.first_name  %> <%= user.last_name  %> </i></p>
                      <% end %>
                      <p class='m-3'><%= band.location %></p>
                      </div>
                    <div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
  </div>
</div>