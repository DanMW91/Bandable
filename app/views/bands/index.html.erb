

<div class="banner" style="background-image: url('<%= image_path "banner.jpeg"%>')">
  <div class="titles">
    <h1 class="main-title">Bandable</h1>
    <p>Central creativity hub for musicians around the world</p>
  </div>
</div>

<% if user_signed_in? %>
  <div class="container">
    <div class="cards">
      <div class="card">
        <%= image_tag "find.png" %>
        <h4>Find</h4>
        <p>Find a band you want to join.</p>
      </div>
      <div class="card">
        <%= image_tag "meet.png" %>
        <h4>Meet</h4>
        <p>Meet band members around the world.</p>
      </div>
      <div class="card">
        <%= image_tag "note.png" %>
        <h4>Collaborate</h4>
        <p>Finally you will be able to bring your inspirations to life.</p>
      </div>
    </div>
  </div>
<% end %>


<div class="container">
  <div class="d-inline-flex justify-content-between cards-container">
    <% @bands.each do |band| %>
    <figure class="image-block">
    <h2><%= link_to band.name.capitalize, band_path(band)%></h2>
     <%= image_tag band.image_url %>
      <% band.users.each do |user| %>
    <h6><i>Band member -<%= user.first_name  %> <%= user.last_name  %></i></h6>
  <% end %>
	<figcaption>
		<h3>
			Band Bio
		</h3>
		<p><%= band.bio[0..150].gsub(/\s\w+\s*$/, '...') %></p>
    <p><%= band.location %></p>
		<button>
			More Info
		</button>
	</figcaption>
</figure>
<% end %>
</div>
</div>

