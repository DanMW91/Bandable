  <div class="container">
    <div class="row justify-content-center">

      <div class="col-6 m-5">
      <h3 class="mt-5 text-center white-font"><strong>Log in</strong></h3><br />

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "white-font" }) do |f| %>

      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-md d-flex' %>
      </div><br />
      <% end %>

      <div class="d-flex justify-content-center links">
      <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
